{
  "name": "wundii/afterbuy-sdk",
  "description": "Afterbuy Programming Interface Software Development Kit",
  "keywords": ["afterbuy","sdk"],
  "license": "MIT",
  "authors": [
    {
      "name": "Andreas Wunderwald",
      "email": "wundii@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-simplexml": "*",
    "symfony/http-client": "^6.4 || ^7.0",
    "symfony/monolog-bundle": "^3.10",
    "webmozart/assert": "^1.11",
    "wundii/data-mapper": "^1.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpunit/phpunit": "^11.0",
    "rector/rector": "^2.0",
    "symfony/var-dumper": "^7.0",
    "symplify/easy-coding-standard": "^12.0",
    "wundii/phplint": "^0.3"
  },
  "autoload": {
    "psr-4": {
      "AfterbuySdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AfterbuySdk\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "auto-scripts": {
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "complete-check": [
      "@cache-clear",
      "@rector-dry",
      "@phpstan",
      "@ecs-dry",
      "@unittest"
    ],
    "rector-dry": [
      "php vendor/bin/rector process --dry-run --ansi"
    ],
    "rector-apply": [
      "php vendor/bin/rector process --ansi"
    ],
    "ecs-dry": [
      "php vendor/bin/ecs check"
    ],
    "ecs-apply": [
      "php vendor/bin/ecs check --fix"
    ],
    "phpstan": [
      "php vendor/bin/phpstan analyse"
    ],
    "unittest": [
      "php vendor/bin/phpunit --configuration phpunit.xml"
    ],
    "cache-clear": [
      "rm -R ./cache/* -f"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
